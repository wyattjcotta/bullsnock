#The chance that the lootcrate loot table will be injected into a chest loot table
#Range: 1 ~ 400
lootCrateWeight = 100
#The minimum number of rolls a loot crate will try to generate, each roll has a 30% chance of generating a loot crate
#Range: 0 ~ 300
lootCrateMinRolls = 3
#the maximum number of rolls a loot crate will try to generate, each roll has a 30% chance of generating a loot crate
#Range: 0 ~ 300
lootCrateMaxRolls = 5
#enable wither effect on tools
enableWither = true
#enable slowness effect on tools
enableSlowness = true
#enable poison effect on tools
enablePoison = true
#enable weakness effect on tools
enableWeakness = true
#enable blindness effect on tools
enableBlindness = true
#enable regeneration effect on tools
enableRegeneration = true
#enable speed effect on tools
enableSpeed = true
#enable haste effect on tools
enableHaste = true
#enable resistance effect on tools
enableResistance = true
#enable fire resistance effect on tools
enableFireResistance = true
#enables mobs dropping crates
enableMobDropCrate = true

